# Configurações da Aplicação
VITE_APP_NAME="Mascate Runeria"
VITE_APP_VERSION="1.0.0"

# Ambiente de Execução (development | production)
NODE_ENV=development

# PostgreSQL Database Configuration
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_DB=
POSTGRES_SSL=  # true para conexões remotas, false para conexões locais

# Frontend Configuration
VITE_API_URL=http://localhost:3002/api

# Server Port
PORT=3002

# Debug (opcional)
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGS=false

# ====================================
# NOTAS DE CONFIGURAÇÃO:
# ====================================
#
# DESENVOLVIMENTO (conecta ao banco remoto):
#   POSTGRES_HOST=postgres.platform.sinesys.app
#   POSTGRES_SSL=true
#   NODE_ENV=development
#
# PRODUÇÃO (CapRover - conexão interna):
#   POSTGRES_HOST=srv-captain--postgres
#   POSTGRES_SSL=false (ou omitir)
#   NODE_ENV=production
#   VITE_API_URL=/api
#
# ====================================